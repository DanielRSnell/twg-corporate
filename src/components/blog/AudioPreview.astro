---
interface Props {
  url: string;
  thumbnail: string;
  duration: string;
  class?: string;
}

const { url, thumbnail, duration, class: className } = Astro.props;
---

<div class={`relative ${className}`}>
  <div class="bg-theme-light rounded-lg p-4 flex items-center gap-4">
    <button
      class="w-12 h-12 bg-primary/90 rounded-full flex-shrink-0 flex items-center justify-center hover:bg-primary transition"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="white"
      >
        <path d="M8 5v14l11-7z"/>
      </svg>
    </button>
    <div class="flex-grow">
      <div class="h-2 bg-primary/20 rounded-full">
        <div class="w-0 h-full bg-primary rounded-full"></div>
      </div>
      {duration && <p class="text-sm text-light mt-2">{duration}</p>}
    </div>
  </div>
</div>
